    <HeaderedContentControl Style="{StaticResource SampleSectionStyle}" Tag="https://www.noesisengine.com/xamltoy/71a66f5a3d815a9087aff0a731aa1861" TabIndex="200">
      <HeaderedContentControl.Header>
        <StackPanel>
          <TextBlock Style="{StaticResource SampleSectionTitle}" Text="BrushShader"/>
          <TextBlock Style="{StaticResource SampleSectionDesc}" Margin="0,5,0,0">
            <Run Text="This is an extension for the"/>
            <Run FontWeight="Bold">ImageBrush</Run>
            <Run Text="that allows users to paint a region using a custom shader. Next there are examples of a monochrome filter, a conic gradient and some animated waves created using pixel shaders."/>
          </TextBlock>
        </StackPanel>
      </HeaderedContentControl.Header>
      <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="20,0">
          <StackPanel>
            <TextBlock Text="Monochrome" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <Rectangle Width="120" Height="80">
              <Rectangle.Fill>
                <ImageBrush ImageSource="Images/Nature.png">
                  <noesis:Brush.Shader>
                    <noesis:MonochromeBrush Color="White"/>
                  </noesis:Brush.Shader>
                </ImageBrush>
              </Rectangle.Fill>
            </Rectangle>
          </StackPanel>
          <StackPanel Margin="30,0,0,00">
            <TextBlock Text="ConicGradient" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <Ellipse Width="120" Height="80">
              <Ellipse.Fill>
                <ImageBrush ImageSource="Images/Nature.png">
                  <noesis:Brush.Shader>
                    <noesis:ConicGradientBrush>
                      <GradientStop Offset="0" Color="Red"/>
                      <GradientStop Offset="0.25" Color="Yellow"/>
                      <GradientStop Offset="0.5" Color="GreenYellow"/>
                      <GradientStop Offset="0.75" Color="DodgerBlue"/>
                      <GradientStop Offset="1" Color="Purple"/>
                    </noesis:ConicGradientBrush>
                  </noesis:Brush.Shader>
                </ImageBrush>
              </Ellipse.Fill>
            </Ellipse>
          </StackPanel>
          <StackPanel Margin="30,0,0,0">
            <StackPanel.Resources>
              <Storyboard x:Key="AnimWaves">
                <DoubleAnimation To="8640000" Duration="100.0:0:0" Storyboard.TargetName="waves" Storyboard.TargetProperty="Time"/>
              </Storyboard>
            </StackPanel.Resources>
            <StackPanel.Triggers>
              <EventTrigger RoutedEvent="Panel.Loaded">
                <BeginStoryboard Storyboard="{StaticResource AnimWaves}"/>
              </EventTrigger>
            </StackPanel.Triggers>
            <TextBlock Text="Waves" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <Path Data="M0,10L10,0 110,0 120,10 120,70 110,80 10,80 0,70z">
              <Path.Fill>
                <ImageBrush ImageSource="Images/Nature.png">
                  <noesis:Brush.Shader>
                    <noesis:WavesBrush x:Name="waves" Time="0"/>
                  </noesis:Brush.Shader>
                </ImageBrush>
              </Path.Fill>
            </Path>
          </StackPanel>
        </StackPanel>
      </Grid>
    </HeaderedContentControl>
  </StackPanel>
</HeaderedContentControl>