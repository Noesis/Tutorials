        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.DarkLime.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.DarkOrange.xaml"/>
