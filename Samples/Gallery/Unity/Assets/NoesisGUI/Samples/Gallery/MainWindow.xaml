        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.LightBlue.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.LightCrimson.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.LightEmerald.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.LightGreen.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.LightLime.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.LightOrange.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.LightPurple.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Theme/NoesisTheme.Brushes.LightRed.xaml"/>

        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Animation.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Brushes.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Button.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Canvas.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/CheckBox.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/ComboBox.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/ContextMenu.xaml"/>
