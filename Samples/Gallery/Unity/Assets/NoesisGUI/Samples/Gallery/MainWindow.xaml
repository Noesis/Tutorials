        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Effects.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Expander.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Grid.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/GroupBox.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Hyperlink.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Image.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/ItemsControl.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/ListBox.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/ListView.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/Menu.xaml"/>
        <noesis:Dependency Source="/Gallery;component/Assets/NoesisGUI/Samples/Gallery/Samples/PasswordBox.xaml"/>
