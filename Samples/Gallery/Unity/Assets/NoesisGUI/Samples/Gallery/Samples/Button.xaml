        </StackPanel>
        <Grid Grid.Column="1" Grid.Row="0" Margin="8,0,0,0" UseLayoutRounding="True">
          <Rectangle Fill="DodgerBlue" Width="40"/>
          <Rectangle Fill="#FFADFF2F" Width="40" x:Name="Rect1"/>
