            <EventTrigger RoutedEvent="ButtonBase.Click">
              <BeginStoryboard>
                <Storyboard>
                  <ColorAnimation Duration="0:0:0.5" Storyboard.TargetName="Rect1" Storyboard.TargetProperty="Fill.Color" From="#00ADFF2F" To="#FFADFF2F"/>
