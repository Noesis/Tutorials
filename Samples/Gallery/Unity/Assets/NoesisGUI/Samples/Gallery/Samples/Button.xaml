  <StackPanel>
    <TextBlock Style="{DynamicResource SampleSectionDesc}" Text="The Button control provides the Click event to respond to user input from a touch, mouse or keyboard. You can put different kinds of content in a button, such as text or an image, or you can restyle a button to give it a unique look." />
    <HeaderedContentControl Style="{DynamicResource SampleSectionStyle}" Tag="https://www.noesisengine.com/xamltoy/d3d12cf3ab515f271fb711c836eff056" TabIndex="100">
      <HeaderedContentControl.Header>
        <StackPanel>
          <TextBlock Style="{DynamicResource SampleSectionTitle}" Text="ClickMode"/>
          <TextBlock Style="{DynamicResource SampleSectionDesc}" Margin="0,5,0,0">
                        <Run>Specifies when the Click event should be raised:</Run>
                        <Run FontWeight="Bold">Release</Run><Run>,</Run>
                        <Run FontWeight="Bold">Press</Run>
                        <Run>or</Run>
                        <Run FontWeight="Bold">Hover</Run><Run>.</Run>
          </TextBlock>
        </StackPanel>
      </HeaderedContentControl.Header>
      <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0">
