                    <EasingDoubleKeyFrame KeyTime="0" Value="-10"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.55" Value="-10"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.85" Value="0">
