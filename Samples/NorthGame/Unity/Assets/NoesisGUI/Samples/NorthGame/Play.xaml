                                    <Image x:Name="TopMenuEffects" Source="Images/TopMenuEffects.png" IsHitTestVisible="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                                <ListBox x:Name="Navigation" Style="{StaticResource Style.ListBox.HorizontalList}" HorizontalAlignment="Center" Height="90" Margin="0,0,0,40"
