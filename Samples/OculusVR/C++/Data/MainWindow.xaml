<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
  xmlns:local="clr-namespace:Oculus3D"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  mc:Ignorable="d"
  Title="MainWindow"
  FontFamily="Fonts/#Inconsolata"
  Width="1280" Height="720">

  <Page.Resources>
    <Storyboard x:Key="Anim.RadarGlow" Duration="0:0:4" RepeatBehavior="Forever">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.Opacity)" Storyboard.TargetName="Radar1">
        <EasingDoubleKeyFrame KeyTime="0" Value="0.8"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.2">
          <EasingDoubleKeyFrame.EasingFunction>
            <CubicEase EasingMode="EaseOut"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.Opacity)" Storyboard.TargetName="Radar2">
        <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.82"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0.25">
          <EasingDoubleKeyFrame.EasingFunction>
            <CubicEase EasingMode="EaseOut"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.Opacity)" Storyboard.TargetName="Radar3">
        <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0.84"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.7" Value="0.3">
          <EasingDoubleKeyFrame.EasingFunction>
            <CubicEase EasingMode="EaseOut"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.Opacity)" Storyboard.TargetName="Radar4">
        <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0.86"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="0.35">
          <EasingDoubleKeyFrame.EasingFunction>
            <CubicEase EasingMode="EaseOut"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.Opacity)" Storyboard.TargetName="Radar5">
        <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0.88"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.9" Value="0.4">
          <EasingDoubleKeyFrame.EasingFunction>
            <CubicEase EasingMode="EaseOut"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.Opacity)" Storyboard.TargetName="Radar6">
        <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0.9"/>
        <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.5">
          <EasingDoubleKeyFrame.EasingFunction>
            <CubicEase EasingMode="EaseOut"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(GradientBrush.GradientStops)[1].(GradientStop.Offset)" Storyboard.TargetName="MarkerShadow" Duration="0:0:1" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0.01"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1">
          <EasingDoubleKeyFrame.EasingFunction>
            <CubicEase EasingMode="EaseOut"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
        <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.01">
          <EasingDoubleKeyFrame.EasingFunction>
            <CubicEase EasingMode="EaseIn"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="Anim.Fuel">
      <StringAnimationUsingKeyFrames Storyboard.TargetProperty="(TextBlock.Text)" Storyboard.TargetName="FuelValue" RepeatBehavior="Forever">
        <DiscreteStringKeyFrame KeyTime="0" Value="4.2 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.1" Value="4.3 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.15" Value="4.5 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.2" Value="4.4 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.3" Value="4.2 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.4" Value="4.1 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.5" Value="4.2 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.65" Value="4.5 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.8" Value="4.6 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:0.9" Value="4.3 /s"/>
        <DiscreteStringKeyFrame KeyTime="0:0:1" Value="4.1 /s"/>
      </StringAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="FuelLine" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0:1:00" Value="-1"/>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="FuelBars">
        <DiscreteDoubleKeyFrame KeyTime="0:1:0" Value="-0.2"/>
        <DiscreteDoubleKeyFrame KeyTime="0:2:0" Value="-0.3"/>
        <DiscreteDoubleKeyFrame KeyTime="0:3:0" Value="-0.4"/>
        <DiscreteDoubleKeyFrame KeyTime="0:4:0" Value="-0.5"/>
        <DiscreteDoubleKeyFrame KeyTime="0:5:0" Value="-0.6"/>
        <DiscreteDoubleKeyFrame KeyTime="0:6:0" Value="-0.7"/>
        <DiscreteDoubleKeyFrame KeyTime="0:7:0" Value="-0.8"/>
        <DiscreteDoubleKeyFrame KeyTime="0:8:0" Value="-0.9"/>
        <DiscreteDoubleKeyFrame KeyTime="0:9:0" Value="-1.0"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="Anim.EnergySys0">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergySys" Duration="0:0:25.6" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:3.2" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergySys1">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergySys" Duration="0:0:6.4" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:3.2" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergySys2">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergySys" Duration="0:0:3.2" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:1.6" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergySys3">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergySys" Duration="0:0:1.6" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergySys4">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergySys" Duration="0:0:0.8" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="Anim.EnergyEng0">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyEng" Duration="0:0:25.6" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:3.2" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergyEng1">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyEng" Duration="0:0:6.4" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:3.2" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergyEng2">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyEng" Duration="0:0:3.2" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:1.6" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergyEng3">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyEng" Duration="0:0:1.6" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergyEng4">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyEng" Duration="0:0:0.8" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="Anim.EnergyWep0">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyWep" Duration="0:0:25.6" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:3.2" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergyWep1">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyWep" Duration="0:0:6.4" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:3.2" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergyWep2">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyWep" Duration="0:0:3.2" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:1.6" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergyWep3">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyWep" Duration="0:0:1.6" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    <Storyboard x:Key="Anim.EnergyWep4">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(Brush.RelativeTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="EnergyWep" Duration="0:0:0.8" RepeatBehavior="Forever">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-1.1"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="Anim.Shields" RepeatBehavior="Forever">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(GradientBrush.GradientStops)[2].(GradientStop.Offset)" Storyboard.TargetName="Shields">
        <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0"/>
        <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0.11">
          <EasingDoubleKeyFrame.EasingFunction>
            <PowerEase EasingMode="EaseIn" Power="16"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
        <EasingDoubleKeyFrame KeyTime="0:0:5" Value="0.11"/>
        <EasingDoubleKeyFrame KeyTime="0:0:6" Value="0.23">
          <EasingDoubleKeyFrame.EasingFunction>
            <PowerEase EasingMode="EaseIn" Power="16"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
        <EasingDoubleKeyFrame KeyTime="0:0:15" Value="0.23"/>
        <EasingDoubleKeyFrame KeyTime="0:0:16" Value="0.34">
          <EasingDoubleKeyFrame.EasingFunction>
            <PowerEase EasingMode="EaseIn" Power="16"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
        <EasingDoubleKeyFrame KeyTime="0:0:25" Value="0">
          <EasingDoubleKeyFrame.EasingFunction>
            <PowerEase EasingMode="EaseIn" Power="16"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Stroke).(GradientBrush.GradientStops)[0].(GradientStop.Offset)" Storyboard.TargetName="Shields">
        <EasingDoubleKeyFrame KeyTime="0" Value="0.01"/>
        <EasingDoubleKeyFrame KeyTime="0:0:1" Value="0.01"/>
        <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0.12">
          <EasingDoubleKeyFrame.EasingFunction>
            <PowerEase EasingMode="EaseIn" Power="16"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
        <EasingDoubleKeyFrame KeyTime="0:0:5" Value="0.12"/>
        <EasingDoubleKeyFrame KeyTime="0:0:6" Value="0.24">
          <EasingDoubleKeyFrame.EasingFunction>
            <PowerEase EasingMode="EaseIn" Power="16"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
        <EasingDoubleKeyFrame KeyTime="0:0:15" Value="0.24"/>
        <EasingDoubleKeyFrame KeyTime="0:0:16" Value="0.35">
          <EasingDoubleKeyFrame.EasingFunction>
            <PowerEase EasingMode="EaseIn" Power="16"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
        <EasingDoubleKeyFrame KeyTime="0:0:25" Value="0.01">
          <EasingDoubleKeyFrame.EasingFunction>
            <PowerEase EasingMode="EaseIn" Power="16"/>
          </EasingDoubleKeyFrame.EasingFunction>
        </EasingDoubleKeyFrame>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <GradientStopCollection x:Key="Gradient.Radar">
      <GradientStop Color="#FFC9622D" Offset="0"/>
      <GradientStop Color="#FFE2834A" Offset="1"/>
    </GradientStopCollection>
    <GradientStopCollection x:Key="Gradient.Energy">
      <GradientStop Color="#FFFFDA20"/>
      <GradientStop Color="#FFB43F0C" Offset="0.95"/>
      <GradientStop Color="#FFCC7012" Offset="1"/>
    </GradientStopCollection>
    <SolidColorBrush x:Key="Brush.ControlFg" Color="#FFFF813B"/>
    <SolidColorBrush x:Key="Brush.ControlFg.Over" Color="#FFFF9D67"/>

    <ControlTemplate x:Key="Template.PanelCheckBox" TargetType="CheckBox">
      <ControlTemplate.Resources>
        <Storyboard x:Key="Anim.Check">
          <ColorAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Background.GradientStops[0].Color"
                                        To="#D027BCC3" Duration="0:0:0.1" AccelerationRatio="0.8" DecelerationRatio="0.2"/>
          <ColorAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                        To="#8F27BCC3" Duration="0:0:0.1" AccelerationRatio="0.8" DecelerationRatio="0.2"/>
          <ColorAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Background.GradientStops[2].Color"
                                        To="#6027BCC3" Duration="0:0:0.1" AccelerationRatio="0.8" DecelerationRatio="0.2"/>
          <ColorAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="BorderBrush.Color"
                                        To="#3027BCC3" Duration="0:0:0.1" AccelerationRatio="0.8" DecelerationRatio="0.2"/>
          <DoubleAnimation
                            Storyboard.TargetName="Bd"
                            Storyboard.TargetProperty="(noesis:Element.Transform3D).(noesis:CompositeTransform3D.TranslateZ)"
                            To="2" Duration="0:0:0.1" DecelerationRatio="1"/>
          <DoubleAnimation
                            Storyboard.TargetName="ContentHost"
                            Storyboard.TargetProperty="(noesis:Element.Transform3D).(noesis:CompositeTransform3D.TranslateZ)"
                            To="6" Duration="0:0:0.1" DecelerationRatio="1"/>
        </Storyboard>
        <Storyboard x:Key="Anim.Uncheck">
          <ColorAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Background.GradientStops[0].Color"
                                        To="#82FF813B" Duration="0:0:0.2" AccelerationRatio="0.2" DecelerationRatio="0.8"/>
          <ColorAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                        To="#26FF813B" Duration="0:0:0.2" AccelerationRatio="0.2" DecelerationRatio="0.8"/>
          <ColorAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Background.GradientStops[2].Color"
                                        To="#19FF813B" Duration="0:0:0.2" AccelerationRatio="0.2" DecelerationRatio="0.8"/>
          <ColorAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="BorderBrush.Color"
                                        To="#12FF813B" Duration="0:0:0.1" AccelerationRatio="0.2" DecelerationRatio="0.8"/>
          <DoubleAnimation
                            Storyboard.TargetName="Bd"
                            Storyboard.TargetProperty="(noesis:Element.Transform3D).(noesis:CompositeTransform3D.TranslateZ)"
                            To="10" Duration="0:0:0.2" DecelerationRatio="1"/>
          <DoubleAnimation
                            Storyboard.TargetName="ContentHost"
                            Storyboard.TargetProperty="(noesis:Element.Transform3D).(noesis:CompositeTransform3D.TranslateZ)"
                            To="4" Duration="0:0:0.2" DecelerationRatio="1"/>
        </Storyboard>
      </ControlTemplate.Resources>
      <BulletDecorator x:Name="Bd">
        <noesis:Element.Transform3D>
          <noesis:CompositeTransform3D TranslateZ="10"/>
        </noesis:Element.Transform3D>
        <BulletDecorator.Bullet>
          <Border x:Name="CheckMark" Width="35" Height="35" CornerRadius="4" BorderBrush="#12FF813B" BorderThickness="2">
            <Border.Background>
              <RadialGradientBrush>
                <GradientStop Color="#82FF813B" Offset="0"/>
                <GradientStop Color="#26FF813B" Offset="0.788"/>
                <GradientStop Color="#19FF813B" Offset="1"/>
              </RadialGradientBrush>
            </Border.Background>
          </Border>
        </BulletDecorator.Bullet>
        <TextBlock x:Name="ContentHost" Text="{TemplateBinding Content}" FontSize="50" Foreground="{StaticResource Brush.ControlFg}" VerticalAlignment="Center" Margin="20,0,0,0">
          <noesis:Element.Transform3D>
              <noesis:CompositeTransform3D TranslateZ="4"/>
          </noesis:Element.Transform3D>
        </TextBlock>
      </BulletDecorator>
      <ControlTemplate.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Foreground" Value="{StaticResource Brush.ControlFg.Over}" TargetName="ContentHost"/>
        </Trigger>
        <Trigger Property="IsChecked" Value="True">
          <Trigger.EnterActions>
            <BeginStoryboard Storyboard="{StaticResource Anim.Check}"/>
          </Trigger.EnterActions>
          <Trigger.ExitActions>
            <BeginStoryboard Storyboard="{StaticResource Anim.Uncheck}"/>
          </Trigger.ExitActions>
        </Trigger>
      </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style TargetType="{x:Type CheckBox}">
      <Setter Property="OverridesDefaultStyle" Value="True"/>
      <Setter Property="Margin" Value="30,0"/>
      <Setter Property="Template" Value="{StaticResource Template.PanelCheckBox}"/>
    </Style>

    <ControlTemplate x:Key="Template.PanelButton" TargetType="Button">
      <ControlTemplate.Resources>
        <Storyboard x:Key="Anim.Press">
          <DoubleAnimation Storyboard.TargetName="Bd" Storyboard.TargetProperty="Background.RelativeTransform.Children[3].X"
                                         To="0" Duration="0:0:0.1" AccelerationRatio="1"/>
          <DoubleAnimation
                            Storyboard.TargetName="Bd"
                            Storyboard.TargetProperty="(noesis:Element.Transform3D).(noesis:CompositeTransform3D.TranslateZ)"
                            To="0" Duration="0:0:0.1" DecelerationRatio="1"/>
        </Storyboard>
        <Storyboard x:Key="Anim.Release">
          <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Bd" Storyboard.TargetProperty="Background.RelativeTransform.Children[3].X">
            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1">
              <EasingDoubleKeyFrame.EasingFunction>
                <CircleEase EasingMode="EaseOut"/>
              </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <DiscreteDoubleKeyFrame KeyTime="0:0:0.21" Value="-1"/>
          </DoubleAnimationUsingKeyFrames>
          <DoubleAnimation
                            Storyboard.TargetName="Bd"
                            Storyboard.TargetProperty="(noesis:Element.Transform3D).(noesis:CompositeTransform3D.TranslateZ)"
                            To="5" Duration="0:0:0.2" DecelerationRatio="1"/>
        </Storyboard>
      </ControlTemplate.Resources>
      <Border x:Name="Bd" Padding="2,0">
        <noesis:Element.Transform3D>
          <noesis:CompositeTransform3D TranslateZ="6"/>
        </noesis:Element.Transform3D>
        <Border.Background>
          <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
            <LinearGradientBrush.RelativeTransform>
              <TransformGroup>
                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                <RotateTransform CenterY="0.5" CenterX="0.5"/>
                <TranslateTransform X="-1"/>
              </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#00FF813B" Offset="0"/>
            <GradientStop Color="#4CFF813B" Offset="0.01"/>
            <GradientStop Color="#4CFF813B" Offset="0.99"/>
            <GradientStop Color="#00FF813B" Offset="1"/>
          </LinearGradientBrush>
        </Border.Background>
        <TextBlock x:Name="ContentHost" Text="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Foreground="{StaticResource ResourceKey=Brush.ControlFg}">
                        <noesis:Element.Transform3D>
                            <noesis:CompositeTransform3D TranslateZ="4"/>
                        </noesis:Element.Transform3D>
        </TextBlock>
      </Border>
      <ControlTemplate.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Foreground" Value="{StaticResource Brush.ControlFg.Over}" TargetName="ContentHost"/>
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Trigger.EnterActions>
            <BeginStoryboard Storyboard="{StaticResource Anim.Press}"/>
          </Trigger.EnterActions>
          <Trigger.ExitActions>
            <BeginStoryboard Storyboard="{StaticResource Anim.Release}"/>
          </Trigger.ExitActions>
        </Trigger>
      </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style TargetType="{x:Type Button}">
      <Setter Property="OverridesDefaultStyle" Value="True"/>
      <Setter Property="Margin" Value="8,2"/>
      <Setter Property="Template" Value="{StaticResource Template.PanelButton}"/>
    </Style>

    <Style x:Key="Style.PanelScrollBarButton" TargetType="RepeatButton">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="RepeatButton">
            <Border Background="Transparent"/>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="Style.PanelScrollBarThumb" TargetType="Thumb">
