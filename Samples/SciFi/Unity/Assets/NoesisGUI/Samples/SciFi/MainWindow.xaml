    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <ei:ControlStoryboardAction Storyboard="{StaticResource Reset}"/>
        </i:EventTrigger>
        <ei:StoryboardCompletedTrigger Storyboard="{StaticResource Reset}">
            <ei:ControlStoryboardAction Storyboard="{StaticResource Intro}"/>
        </ei:StoryboardCompletedTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/Background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="SeparatorUp" Height="14" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse>
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#2800A0F5" Offset="0.35"/>
                        <GradientStop Color="#2800A0F5" Offset="0.65"/>
                        <GradientStop Color="#0A00A0F5"/>
                        <GradientStop Color="#0A00A0F5" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="2">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#3F00A0F5" Offset="0.35"/>
                        <GradientStop Color="#3F00A0F5" Offset="0.65"/>
                        <GradientStop Color="#0C00A0F5"/>
                        <GradientStop Color="#0C00A0F5" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="4">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FF1FD5DC" Offset="0.35"/>
                        <GradientStop Color="#FF1FD5DC" Offset="0.65"/>
                        <GradientStop Color="#0C1FD5DC"/>
                        <GradientStop Color="#0C1FD5DC" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="6,5">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#7FC3FDFF" Offset="0.5"/>
                        <GradientStop Color="#00C3FDFF"/>
                        <GradientStop Color="#00C3FDFF" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
        <Grid x:Name="SeparatorDown" Height="14" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse>
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#2800A0F5" Offset="0.35"/>
                        <GradientStop Color="#2800A0F5" Offset="0.65"/>
                        <GradientStop Color="#0A00A0F5"/>
                        <GradientStop Color="#0A00A0F5" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="2">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#3F00A0F5" Offset="0.35"/>
                        <GradientStop Color="#3F00A0F5" Offset="0.65"/>
                        <GradientStop Color="#0C00A0F5"/>
                        <GradientStop Color="#0C00A0F5" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="4">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FF1FD5DC" Offset="0.35"/>
                        <GradientStop Color="#FF1FD5DC" Offset="0.65"/>
                        <GradientStop Color="#0C1FD5DC"/>
                        <GradientStop Color="#0C1FD5DC" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="7,5">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#7FC3FDFF" Offset="0.5"/>
                        <GradientStop Color="#00C3FDFF"/>
                        <GradientStop Color="#00C3FDFF" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>
        <Viewbox Grid.Column="1" Grid.Row="2">
            <Grid Width="1260" Height="680">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="Title" Text="SELECT GUN" Foreground="#FF00E4FF" FontSize="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle x:Name="SelectedGunBg" Margin="0,70,0,0">
                        <Rectangle.Fill>
                            <RadialGradientBrush GradientOrigin="0.5,0.4" Center="0.5,0.4" RadiusY="0.4">
                                <GradientStop Color="#590470A5" Offset="0"/>
                                <GradientStop Offset="1" Color="#0000E4FF"/>
                                <GradientStop Color="#0D00D2F1" Offset="0.65"/>
                            </RadialGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle x:Name="SelectedGunImage" Margin="40,100,40,10" RenderTransformOrigin="0.5,0.5">
                        <Rectangle.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="{Binding SelectedGun.Image}" Stretch="Uniform"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Grid Grid.Column="1">
                        <Grid x:Name="SeparatorVertical" Width="14" HorizontalAlignment="Left" Margin="0,20,0,8" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Grid.RenderTransform>
                            <Ellipse>
                                <Ellipse.Fill>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#2800A0F5" Offset="0.35"/>
                                        <GradientStop Color="#2800A0F5" Offset="0.65"/>
                                        <GradientStop Color="#0A00A0F5"/>
                                        <GradientStop Color="#0A00A0F5" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse Margin="2">
                                <Ellipse.Fill>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#3F00A0F5" Offset="0.35"/>
                                        <GradientStop Color="#3F00A0F5" Offset="0.65"/>
                                        <GradientStop Color="#0C00A0F5"/>
                                        <GradientStop Color="#0C00A0F5" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse Margin="4">
                                <Ellipse.Fill>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#FF1FD5DC" Offset="0.35"/>
                                        <GradientStop Color="#FF1FD5DC" Offset="0.65"/>
                                        <GradientStop Color="#0C1FD5DC"/>
                                        <GradientStop Color="#0C1FD5DC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Ellipse Margin="7,5">
                                <Ellipse.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#7FC3FDFF" Offset="0.5"/>
                                        <GradientStop Color="#00C3FDFF"/>
                                        <GradientStop Color="#00C3FDFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>
                        <StackPanel Margin="60,24,0,0">
                            <TextBlock x:Name="GunName" Text="{Binding SelectedGun.Name}" Foreground="#FF00E4FF" FontSize="40" RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <StackPanel x:Name="Speed" Orientation="Vertical" Margin="0,20,0,0" RenderTransformOrigin="0.5,0.5">
                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </StackPanel.RenderTransform>
                                <TextBlock x:Name="SpeedLabel" Text="SPEED" Foreground="White" FontSize="26.667"/>
                                <ProgressBar x:Name="SpeedValue" Minimum="0" Maximum="10" Value="{Binding SelectedGun.Speed, Mode=OneWay}" Margin="0,4,20,0" Template="{StaticResource ProgressTemplate}"/>
                                <TextBlock x:Name="SpeedText" Text="{Binding SelectedGun.Speed, StringFormat={}{0} SHOTS/s}" Foreground="#FFEEA200" FontSize="16"/>
                            </StackPanel>
                            <StackPanel x:Name="Accuracy" Orientation="Vertical" Margin="0,20,0,0" RenderTransformOrigin="0.5,0.5">
                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </StackPanel.RenderTransform>
                                <TextBlock x:Name="AccuracyLabel" Text="ACCURACY" Foreground="White" FontSize="26.667"/>
                                <ProgressBar x:Name="AccuracyValue" Minimum="0" Maximum="100" Value="{Binding SelectedGun.Accuracy, Mode=OneWay}" Margin="0,4,20,0" Template="{StaticResource ProgressTemplate}"/>
                                <TextBlock x:Name="AccuracyText" Text="{Binding SelectedGun.Accuracy, StringFormat={}{0} %}" Foreground="#FFEEA200" FontSize="16"/>
                            </StackPanel>
                            <StackPanel x:Name="Damage" Orientation="Vertical" Margin="0,20,0,0" RenderTransformOrigin="0.5,0.5">
                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </StackPanel.RenderTransform>
                                <TextBlock x:Name="DamageLabel" Text="DAMAGE" Foreground="White" FontSize="26.667"/>
                                <ProgressBar x:Name="DamageValue" Minimum="0" Maximum="2000" Value="{Binding SelectedGun.Damage, Mode=OneWay}" Margin="0,4,20,0" Template="{StaticResource ProgressTemplate}"/>
                                <TextBlock x:Name="DamageText" Text="{Binding SelectedGun.Damage, StringFormat={}{0} DPS}" Foreground="#FFEEA200" FontSize="16"/>
                            </StackPanel>
                            <StackPanel x:Name="Ammo" Orientation="Vertical" Margin="0,20,0,0" RenderTransformOrigin="0.5,0.5">
                                <StackPanel.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </StackPanel.RenderTransform>
                                <TextBlock x:Name="AmmoLabel" Text="AMMO" Foreground="White" FontSize="26.667"/>
                                <ProgressBar x:Name="AmmoValue" Minimum="0" Maximum="100" Value="{Binding SelectedGun.Ammo, Mode=OneWay}" Margin="0,4,20,0" Template="{StaticResource ProgressTemplate}"/>
                                <TextBlock x:Name="AmmoText" Text="{Binding SelectedGun.Ammo, StringFormat={}{0} BULLETS}" Foreground="#FFEEA200" FontSize="16"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <ListBox x:Name="Guns" ItemsSource="{Binding Guns}" SelectedItem="{Binding SelectedGun}" AlternationCount="{Binding Guns.Count}" Template="{StaticResource ListBoxControlTemplate}" ItemContainerStyle="{StaticResource GunItemStyle}" RenderTransformOrigin="0.5,0.5">
                        <ListBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ListBox.RenderTransform>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <ei:ControlStoryboardAction Storyboard="{StaticResource GunSelectionChanged}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250*"/>
                        <ColumnDefinition Width="700*"/>
                        <ColumnDefinition Width="250*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="BackButton" Grid.Column="0" Content="BACK" Template="{StaticResource ButtonTemplate}" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Button x:Name="NextButton" Grid.Column="2" Content="NEXT" Template="{StaticResource ButtonTemplate}" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
